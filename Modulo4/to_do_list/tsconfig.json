{
    "compilerOptions": {
        "target": "es6",           
        "module": "commonjs",       
        "sourceMap": true,         
        "outDir": "./build",        
        "rootDir": "./src",                      //pode ser que seja nescessario comentar o rootDir, se der o erro TS6059
        "removeComments": true,    
        "noImplicitAny": true,      
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
    }
  }